<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Mongo Scraper</a>
        </div>
        <ul class="nav navbar-nav">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="/saved">Saved Articles</a></li>
            <li><a href="/api">Articles API</a></li>
        </ul>
        <a class="btn btn-primary navbar-btn" id="scrapeBtn" href="/api/scrape">Scrape New Articles!</a>
    </div>
</nav>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-12">
            <h1>{{this.title}}</h1>
            <h3>{{this.subtitle}}</h3>
        </div>
    </div>
</div>

<div id="articles">
    {{#each articles}}
        <div class="well">
            <div class="row">
                <div class="col col-md-8">
                    <h4><a href="{{this.link}}">{{this.title}}</a></h4>
                </div>
                <div class="col col-md-2">
                    <a class="btn btn-success" href="/api/save/{{this.id}}">Save Article</a>
                </div>
                <div class="col col-md-2">
                    <a class="btn btn-danger" href="/api/delete/{{this.id}}">Delete Article</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>

<div id="notes"></div>
